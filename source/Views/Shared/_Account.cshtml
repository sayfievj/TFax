<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")">
    <title>@AppSettings.APP_TITLE | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet" />
    <!--[if gte IE 9]>
        <link href="@Url.Content("~/Content/ie9-only.css")" rel="stylesheet" />
    <![endif]-->
    <!--[if IE]>
        <link href="@Url.Content("~/Content/ie-only.css")" rel="stylesheet" />
    <![endif]-->
    <link href="~/Content/jquery.selectBox.css" rel="stylesheet" />
    <link href="~/Scripts/fancyBox/jquery.fancybox.css" rel="stylesheet" />
    @RenderSection("styles", false)

</head>
<body>

    <div class="container container-fixed">

        @Html.Partial("Partials/_Header")

        @Html.Partial("Partials/_Menu")

        <div class="row bpush c-wrap">

            <div class="col-3 aside spread">
                <div class="abs-widget c-v-menu">
                    <ul class="v-menu">
                        <li class="active"><a href="#">My Account</a></li>
                        <li>@Html.ActionLink("Home", "Index", "Account")</li>
                        <li>@Html.ActionLink("My Messages", "Index", "Message")</li>
                        <li>@Html.ActionLink("My Favorites", "Index", "Favorite")</li>
                        <li>@Html.ActionLink("My Reviews", "Account", "Review")</li>
                        <li><a href="#">Payment History</a></li>
                        <li>@Html.ActionLink("My Profile", "Profile", "Account")</li>
                        @if (!MembershipHelper.Current.IsActivated)
                        {
                            <li>@Html.ActionLink("Activate My Account", "Active", "Account", new { id = MembershipHelper.Current.Id }, null)</li>
                        }
                    </ul>
                    <ul class="v-menu">
                        <li class="active"><a href="#">Review Menu</a></li>
                        <li>@Html.ActionLink("Submit Review", "Submit", "Review")</li>
                        <li>@Html.ActionLink("Search Review", "Search", "MemberMaster")</li>
                        <li>@Html.ActionLink("Contact us", "Contact", "Review")</li>
                    </ul>
                </div>

            </div>

            <div class="col-10 col-middle spread">

                <div class="col-10 col-middle spread">
                    <div class="my-account">
                        <h2 class="page-title">@ViewBag.Title</h2>
                        @RenderBody()
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
            <div class="col-3 aside spread">
                <div class="aside-widget">
                    <img src="~/Scripts/holder.js/100%x600/text:Skyscraper" alt="">
                </div>
            </div>

        </div>

        <div class="prefooter clearfix"></div>

        @Html.Partial("Partials/_Footer")

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/respond.js")"></script>
        <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    <script src="@Url.Content("~/Scripts/holder.js")"></script>
    <script src="@Url.Content("~/Scripts/easyListSplitter.js")"></script>
    <script src="~/Scripts/bjqs.js"></script>
    <script src="~/Scripts/jquery.selectBox.js"></script>
    <script src="~/Scripts/fancyBox/jquery.fancybox.js"></script>
    <script src="@Url.Content("~/Scripts/main.js")"></script>

    @RenderSection("scripts", false)

</body>

</html>